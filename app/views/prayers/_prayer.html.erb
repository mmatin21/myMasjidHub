<div id="<%= prayer %>">
  <div class="rounded-lg h-full border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800">
    <div class="pt-6">
      <div class="flex items-center justify-between gap-1">
        <%= link_to prayer.name, prayer, class: "text-lg font-semibold leading-tight text-gray-900 hover:underline dark:text-white" %>
      </div>
      <div class="mt-4 flex items-center justify-between gap-4">
        <p class="tfont-normal text-gray-700 dark:text-gray-400">Adhaan Time</p>
        <p class="text-1xl font-extrabold leading-tight text-gray-900 dark:text-white"><%= prayer.adhaan.strftime("%l:%M %p") %></p>
      </div>
      <div class="mt-4 flex items-center justify-between gap-4">
        <p class="font-normal text-gray-700 dark:text-gray-400">Iqaamah Time</p>
        <p class="text-1xl font-extrabold leading-tight text-gray-900 dark:text-white"><%= prayer.iqaamah.strftime("%l:%M %p") %></p>
      </div>
    </div>
  </div>
</div>