<div class="antialiased bg-gray-50 dark:bg-gray-900">
  <main class="p-4 md:ml-64 h-auto pt-20">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>
    <% content_for :title, "Pledges" %>
    <div class="flex justify-between items-center">
      <h1 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Pledges</h1>
    </div>
    <div class="border-gray-300 dark:border-gray-600 rounded-xl h-128">
      <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <%= render "tables/pledge_table", table: @table_pledges, query: @q, pagy: @pagy %>
      </div>
    </div>
  </main>
</div>
