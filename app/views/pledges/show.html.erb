<div class="antialiased">
  <section class="p-4 md:ml-64 h-auto pt-20">
    <div class="py-8 mx-auto max-w-6xl lg:py-16">
      <div class="grid gap-4 px-4 mb-4 sm:mb-5 sm:grid-cols-3 sm:gap-6 md:gap-12">
        <!-- Column -->
        <div class="sm:col-span-2">
          <h2 class="flex items-center mb-4 text-xl font-bold leading-none text-gray-900 sm:text-2xl dark:text-white sm:mb-5">
            <%= link_to @pledge.contact.name, @pledge.contact %>
          </h2>
          <dl class="flex items-center mb-4 space-x-4 sm:mb-5">
            <div>
              <dt class="sr-only">pledge Info</dt>
              <dd class="flex items-center text-gray-900 dark:text-white">
                <svg class="w-4 h-4 mr-1.5 text-gray-400 dark:text-gray-500" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path></svg>
                <span class="font-semibold"><%= @pledge.contact.email %></span>
              </dd>
            </div>
          </dl>
          <dl>
            <dt class="mb-2 leading-none text-gray-500 dark:text-gray-400">Fundraiser</dt>
            <dd class="mb-4 font-medium text-gray-900 sm:mb-5 dark:text-white"><%= link_to @pledge.fundraiser.name, @pledge.fundraiser%></dd>
            <dt class="mb-2 leading-none text-gray-500 dark:text-gray-400">Pledged Amount</dt>
            <dd class="mb-4 font-medium text-gray-900 sm:mb-5 dark:text-white"><%= number_to_currency(@pledge.amount) %></dd>
            <dt class="mb-2 leading-none text-gray-500 dark:text-gray-400">Fulfilled Amount </dt>
            <dd class="mb-4 font-medium text-gray-900 sm:mb-5 dark:text-white"><%= number_to_currency(@pledge.donations.sum(:amount)) %></dd>
          </dl>
        </div>
        <!-- Column -->
        <dl class="p-4 bg-gray-50 rounded-lg border border-gray-200 dark:bg-gray-700 dark:border-gray-600">
          <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">Donations</dt>
          <% @donations.each do |donation| %>
            <dd class="font-light text-gray-500 dark:text-gray-400">
              <%= donation.contact.first_name %> <%= donation.contact.last_name %> - <%= number_to_currency(donation.amount) %> on <%= donation.created_at.strftime("%B %d, %Y") %>
            </dd>
          <% end %>
        </dl>
      </div>
      <div class="flex items-center px-4 space-x-4">
        <%= link_to edit_pledge_path(@pledge), data: { turbo_frame: "turbo-modal" } do %>
          <button type="button" class="text-white inline-flex items-center bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">
            <svg aria-hidden="true" class="mr-1 -ml-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path><path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path></svg>
            Edit
          </button>
        <%  end %>
        <%= link_to @pledge, id: @pledge.id, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this item?'} do %>
          <button type="button" class="inline-flex items-center text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900">
            <svg aria-hidden="true" class="w-5 h-5 mr-1.5 -ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
            Delete
          </button>
        <% end %>
        <%= link_to "Back to Pledges", pledges_path, class: "py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" %>
      </div>
    </div>
  </section>
</div>
