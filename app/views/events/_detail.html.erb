<div id="detail_<%= event.id%>" class="grid gap-4 px-4 mb-4 sm:mb-5 sm:grid-cols-3 sm:gap-6 md:gap-12">
  <!-- Column -->
  <div class="sm:col-span-2">
    <h2 class="flex items-center mb-4 text-xl font-bold leading-none text-gray-900 sm:text-2xl dark:text-white sm:mb-5">
      <%= event.name %>
    </h2>
    <dl>
      <dt class="mb-2 leading-none text-gray-500 dark:text-gray-400">Date</dt>
      <dd class="mb-4 font-medium text-gray-900 sm:mb-5 dark:text-white"> <%= event.event_date.strftime("%A, %B %e, %Y") %> </dd>
      <dt class="mb-2 leading-none text-gray-500 dark:text-gray-400">Location</dt>
      <dd class="mb-4 font-medium text-gray-900 sm:mb-5 dark:text-white"> <%= event.full_address %></dd>
      <dt class="mb-2 leading-none text-gray-500 dark:text-gray-400">Time</dt>
      <dd class="mb-4 font-medium text-gray-900 sm:mb-5 dark:text-white"><%= event.event_date.strftime("%l:%M %p") %></dd>
      <dt class="mb-2 leading-none text-gray-500 dark:text-gray-400">Description</dt>
      <dd class="mb-4 font-medium text-gray-900 sm:mb-5 dark:text-white"><%= event.description %></dd>
    </dl>
  </div>
</div>