<div id="<%= dom_id event %>">
  <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800">
    <div class="flex items-center justify-between gap-1 mb-4">
      <%= link_to event.name, event, class: "text-2xl font-bold leading-tight text-gray-900 hover:underline dark:text-white" %>
    </div>
    <div class="pt-2">
      <p class="font-normal text-gray-700 dark:text-gray-400"><%= event.description %></p>
      <div class="mt-4 flex items-center justify-between gap-4">
        <p class="tfont-normal text-gray-700 dark:text-gray-400">Event Date</p>
        <p class="text-1xl font-extrabold leading-tight text-gray-900 dark:text-white"><%= event.event_date.strftime("%b %d, %Y %l:%M %p") %></p>
      </div>
      <div class="mt-4 flex items-center justify-between gap-4">
        <p class="tfont-normal text-gray-700 dark:text-gray-400">Event Address</p>
        <p class="text-1xl font-extrabold leading-tight text-gray-900 dark:text-white"><%= event.full_address %></p>
      </div>
    </div>
  </div>
</div>