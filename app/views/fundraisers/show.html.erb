<div class="antialiased">
  <section class="p-4 md:ml-64 h-auto pt-20">
    <div class="flex justify-between items-center">
      <h1 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Fundraiser Details</h1>
    </div>
    <div class="py-8 mx-auto w-full">
      <div class="grid gap-4 px-4 mb-4 sm:mb-5 sm:grid-cols-2 sm:gap-6 md:gap-12">
        <!-- Column -->
        <%= render "detail", fundraiser: @fundraiser %>
        <!-- Column -->
        <dl class="p-4 bg-gray-50 rounded-lg border border-gray-200 dark:bg-gray-700 dark:border-gray-600">
          <dt class="mb-2 font-semibold leading-none text-gray-900 dark:text-white">QR Code</dt>
          <% if @fundraiser.qr_code.attached? %>
            <%= image_tag qr_code_url(@fundraiser), alt: "Fundraiser QR Code" if @fundraiser.qr_code.attached? %>
            <dd class="font-light text-gray-500 dark:text-gray-400 py-2">
              <%= link_to "Click here to visit fundraiser.", "https://mobile.mymasjidhub.com/masjids/#{current_masjid.slug}/fundraisers/#{@fundraiser.slug}" %>
            </dd>
          <% else %>
            <dd class="font-light text-gray-500 dark:text-gray-400">
              QR Code is not available yet.
            </dd>
          <% end %>
        </dl>
      </div>
      <div id="donations" class="py-4 px-4 mx-auto border-gray-300 dark:border-gray-600 rounded-xl h-128">
        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
          <%= render "tables/donation_table",  table: @table_donations, query: @q, pagy: @pagy, model: :donation %>
        </div>
      </div>
      <div class="flex items-center py-4 px-4 space-x-4">
        <% if @fundraiser.qr_code.attached? %>
          <%= link_to "Download QR Code", rails_blob_path(@fundraiser.qr_code, disposition: "attachment"), class: "py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" %>
        <% end %>
        <%= link_to "Back to Fundraisers", fundraisers_path, class: "py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700" %>
        <%= link_to edit_fundraiser_path(@fundraiser), data: { turbo_frame: "turbo-modal" } do %>
          <button type="button" class="inline-flex items-center py-2.5 px-5 text-sm font-medium text-gray-900 focus:outline-none bg-white rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700">
            <svg aria-hidden="true" class="mr-1 -ml-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path d="M17.414 2.586a2 2 0 00-2.828 0L7 10.172V13h2.828l7.586-7.586a2 2 0 000-2.828z"></path><path fill-rule="evenodd" d="M2 6a2 2 0 012-2h4a1 1 0 010 2H4v10h10v-4a1 1 0 112 0v4a2 2 0 01-2 2H4a2 2 0 01-2-2V6z" clip-rule="evenodd"></path></svg>
            Edit
          </button>
        <%  end %>
        <%= render "toggle_button", fundraiser: @fundraiser %>
        <%= link_to @fundraiser, id: @fundraiser.id, data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this item?'} do %>
          <button type="button" class="inline-flex items-center text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg border border-gray-200 dark:border-gray-600 text-sm py-2.5 px-5 text-center dark:bg-red-500 dark:hover:bg-red-600 dark:focus:ring-red-900">
            <svg aria-hidden="true" class="w-5 h-5 mr-1.5 -ml-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path></svg>
            Delete
          </button>
        <% end %>
      </div>
    </div>
  </section>
</div>
